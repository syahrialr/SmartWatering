            android:id="@+id/textView"
            android:layout_gravity="center_vertical" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Led1"
            android:layout_gravity="right" />


    </LinearLayout>
</RelativeLayout>
